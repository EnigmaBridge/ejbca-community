<?xml version="1.0" encoding="UTF-8"?>
<web-ext
    xmlns="http://websphere.ibm.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://websphere.ibm.com/xml/ns/javaee http://websphere.ibm.com/xml/ns/javaee/ibm-web-ext_1_0.xsd"
    version="1.0"
    >
    <!-- http://publib.boulder.ibm.com/infocenter/wasinfo/v7r0/index.jsp?topic=/com.ibm.websphere.base.doc/info/aes/ae/rweb_jspengine.html -->
    <jsp-attribute name="trackDependencies" value="true" />
    <jsp-attribute name="disableJspRuntimeCompilation" value="true" />
    <jsp-attribute name="reloadEnabled" value="true"/>
    <!-- This is really all we wanted to configure, I think.. but the rest seems reasonable.-->
    <jsp-attribute name="jdkSourceLevel" value="15"/>

    <reload-interval value="5"/>
    <auto-encode-requests value="false"/>
    <auto-encode-responses value="false"/>
    <enable-directory-browsing value="false"/>
    <enable-file-serving value="true"/>
    <pre-compile-jsps value="true"/>
    <enable-reloading value="true"/>
    <enable-serving-servlets-by-class-name value="false" />	
</web-ext>
