<?xml version="1.0" encoding="UTF-8"?>

<web-app id="ocsp-app_1" version="2.5"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <description><![CDATA[Certificate Store]]></description>

    <servlet>
        <description><![CDATA[Fetches CRLs according to rfc4378]]></description>
        <display-name>CRLStoreServlet</display-name>
        <servlet-name>CRLStore</servlet-name>
        <servlet-class>org.ejbca.ui.web.protocol.CRLStoreServlet</servlet-class>
        <load-on-startup>99</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>CRLStore</servlet-name>
        <url-pattern>/search.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CRLStore</servlet-name>
        <url-pattern>/search.cgi/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>restricted methods</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
        </web-resource-collection>
        <auth-constraint />
    </security-constraint> 
</web-app>
